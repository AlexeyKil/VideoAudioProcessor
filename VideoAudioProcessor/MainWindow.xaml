<Window x:Class="VideoAudioProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoAudioProcessor"
        mc:Ignorable="d"
        Title="Audio Track Manager" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8 4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E40"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="Menu">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E40"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
        </Style>
        
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E40"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="Slider">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="#FF007ACC"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="TickFrequency" Value="1"/>
            <Setter Property="IsMoveToPointEnabled" Value="True"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="#FF1E1E1E">
        <DockPanel>
            <!-- Главное меню -->
            <Menu DockPanel.Dock="Top" Height="25">
                <!-- Меню Файл -->
                <MenuItem Header="Файл">
                    <MenuItem Header="Загрузить" Click="LoadFile_Click"/>
                </MenuItem>
                
                <!-- Меню Треки -->
                <MenuItem Header="Треки">
                    <MenuItem Header="В очереди" Click="ShowQueue_Click"/>
                    <MenuItem Header="Обработанные" Click="ShowProcessed_Click"/>
                </MenuItem>
            </Menu>
            
            <!-- Основное содержимое -->
            <Grid x:Name="MainContent">
                <!-- Стартовый экран -->
                <Grid x:Name="StartScreen" Visibility="Visible">
                    <TextBlock Text="Добро пожаловать в Audio Track Manager" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"/>
                    <TextBlock x:Name="RootPathText" Text="" 
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Bottom"
                               Foreground="LightGray"
                               FontSize="10"
                               Margin="5"/>
                </Grid>
                
                <!-- Экран очереди -->
                <Grid x:Name="QueueScreen" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Список файлов -->
                    <ListBox x:Name="FilesListBox" Grid.Column="0" 
                             SelectionChanged="FilesListBox_SelectionChanged">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить" Click="DeleteFile_Click"/>
                                <MenuItem Header="Обработать" Click="ProcessFile_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                    
                    
                    <!-- Разделитель -->
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>
                    
                    <!-- Проигрыватель -->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Медиа элемент -->
                        <MediaElement x:Name="MediaPlayer" Grid.Row="0"
                                      LoadedBehavior="Manual" 
                                      UnloadedBehavior="Stop"
                                      Stretch="Uniform"
                                      MediaOpened="MediaPlayer_MediaOpened"
                                      MediaEnded="MediaPlayer_MediaEnded"/>
                        
                        <!-- Ползунок прогресса -->
                        <Slider x:Name="ProgressSlider" Grid.Row="1"
                                ValueChanged="ProgressSlider_ValueChanged"
                                IsMoveToPointEnabled="True"/>
                        
                        <!-- Временные метки -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="CurrentTimeText" Text="00:00" Foreground="White" Margin="5"/>
                            <TextBlock Text="/" Foreground="White" Margin="5"/>
                            <TextBlock x:Name="TotalTimeText" Text="00:00" Foreground="White" Margin="5"/>
                        </StackPanel>
                        
                        <!-- Элементы управления -->
                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button Content="▶" Width="40" Click="PlayButton_Click"/>
                            <Button Content="⏸" Width="40" Click="PauseButton_Click" Margin="5,0"/>
                            <Button Content="⏹" Width="40" Click="StopButton_Click"/>
                            <Button x:Name="MuteButton" Content="🔊" Width="40" Click="ToggleMuteButton_Click" Margin="5,0"/>
                            <Slider x:Name="VolumeSlider" Width="100" Minimum="0" Maximum="1" Value="0.5"
                                    ValueChanged="VolumeSlider_ValueChanged"/>
                        </StackPanel>
                        
                        <!-- Статус -->
                        <TextBlock x:Name="PlayerStatus" Grid.Row="0" Grid.RowSpan="4"
                                   Text="Выберите файл для воспроизведения" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="White" TextWrapping="Wrap"/>
                    </Grid>
                </Grid>
                
                <!-- Добавляем новый Grid для экрана обработки -->
                <Grid x:Name="ProcessScreen" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <MediaElement x:Name="ProcessMediaPlayer" 
                                  Grid.Row="0"
                                  LoadedBehavior="Manual" 
                                  UnloadedBehavior="Stop"
                                  Stretch="Uniform"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                HorizontalAlignment="Center" VerticalAlignment="Center" 
                                Margin="10"> 
                    </StackPanel>
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>